---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<section>
  <div class="port">
    <h1 class="a">ANDREA</h1>
    <h1 class="d">DAMGAARD</h1>
    <h1 class="h">HEGNER</h1>
    <h2 class="p">Er jeg jeres nye praktikant <span>?</span></h2>
  </div>
  <figure>
    <Image src={images[imagePath]()} alt={altText} />

    <!-- <img src="../../public/img/Andrea1.webp" alt="" /> -->
  </figure>
</section>

<style>
  section {
    display: grid;
    justify-content: center;

    .port {
      h1 {
        font-size: 4.8rem;
        -webkit-text-stroke: 3.2px var(--color-text-first);
      }
      .a {
        margin: 1% 0% -1.5% 0%;
      }
      .d {
        margin: -8% 0% -8% 0%;
      }
      .h {
        margin: 0% 0% 0% 0%;
      }
      h2 {
        font-size: 2rem;
        font-family: var(--header-two);
        color: var(--color-text-first);
        margin: 0% 0% 15% 0%;

        span {
          font-family: var(--copy-fonts);
          font-weight: bold;
        }
      }
    }
    figure {
      margin: 0% 0% 15% 4%;
      img {
        max-width: 300px;
      }
    }
  }

  @media (width > 1200px) {
    section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-items: start;
      .port {
        grid-column: 1 / span 2;
        grid-row: 1;
        z-index: 1;

        h1 {
          font-size: 10.3rem;
          padding: 0% 0% 0% 15%;
          -webkit-text-stroke: 5px var(--color-text-first);
        }
        h2 {
          padding: 0% 0% 0% 15%;
        }
        .a {
          margin: 10% 0% -1.5% 11%;
        }
        .d {
          margin: -8% 0% -1.5% 10%;
        }
        .h {
          margin: -8% 0% 0% 10%;
        }
        h2 {
          font-size: 2.2rem;
        }
        .p {
          margin: 0% 0% 0% 10%;
        }
      }
      figure {
        grid-column: 2;
        grid-row: 1 / span2;
        padding-left: 2rem;
        img {
          max-width: 370px;
        }
      }
    }
  }
</style>
